<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="77dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@color/pink"
            app:shapeAppearanceOverlay="@style/RoundImage" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/rv_home_tab" />

        <ImageView
            android:id="@+id/search_tab"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/selector_home_tab_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="11dp"
            android:src="@drawable/selector_search" />

        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1" />

        <com.quiet.onlytv.widget.DrawableTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawablePadding="11dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="19sp"
            app:drawableHeight="27dp"
            app:drawableWidth="27dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>